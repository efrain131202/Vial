---
import About from "../components/About.astro";
import Cards from "../components/Cards.astro";
import Service from "../components/Service.astro";
import Gallery from "../components/Gallery.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vial.Solutions</title>
    <link rel="shortcut icon" href="/icono.png" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700&display=swap" rel="stylesheet"/>
    <script  src="https://kit.fontawesome.com/946937af14.js"  crossorigin="anonymous"></script>
  </head>

  <body>

    <nav>
      <input type="checkbox" id="check">
      <label for="check" class="checkbtn">
        <i class="fas fa-bars"></i>
      </label>
      <label class="logo">
		<img src="/icono.png" height="70px" width="60px" alt="logo" class="logo-img">
	  </label>
      <ul>
        <li><a href="#Home">In√≠cio</a></li>
        <li><a href="#Service">Servicios</a></li>
        <li><a href="#Gallery">Galeria</a></li>
        <li><a href="#">Contactos</a></li>
      </ul>
    </nav>

    <section id="Home"></section>
    <About />
    <section id="Service"></section>
    <Cards />
    <Service />
    <section id="Gallery"></section>
    <Gallery />

    <style>
      * {    
     	padding: 0;
	    margin: 0;
	    text-decoration: none;
	    list-style: none;
	    box-sizing: border-box;
        scroll-behavior: smooth;
      body {
        font-family: "Rubik", sans-serif;
        background-image: url("/fondo.png");
      }
      nav {
	    height: 80px;
	    width: 100%;
        position: fixed;
        background-color: white;
		z-index: 1000;
      }

	  .logo-img{
		padding-top: 15px;
	  }
      label.logo {
	    color: #05A7A7;
	    font-size: 35px;
	    line-height: 80px;
	    padding: 0 100px;
	    font-weight: bold;
      }
      nav ul {
	    float: right;
	    margin-right: 20px;
      }
      nav ul li {
    	display: inline-block;
	    line-height: 80px;
	    margin: 0 5px;
      }
      nav ul li a {
	    color: black;
	    font-size: 17px;
	    padding: 7px 13px;
	    border-radius: 3px;
      }
      a:hover {
      transition: 0.5s;
      text-decoration: underline;
      color: #05A7A7;
	    
      }
      .checkbtn {
	    font-size: 30px;
	    color: black;
	    float: right;
	    line-height: 80px;
    	margin-right: 40px;
	    cursor: pointer;
	    display: none;
      }
	  .checkbtn:hover {
		color: #05A7A7;
		transition: 0.5s;
		transform: rotate(180deg);
		transition: transform 1s ease;
	  }
      #check {
    	display: none;
      }
      @media (max-width: 952px){
	    label.logo{
		  font-size: 30px;
		  padding-left: 50px;
	    }
	    nav ul li a{
		  font-size: 16px;
	    }
      }
      @media (max-width: 858px){
	    .checkbtn {
	   	display: block;
	    }
	    ul{
		  position: fixed;
		  width: 100%;
		  height: 100vh;
		  background: white;
		  top: 80px;
		  left: -100%;
		  text-align: center;
		  transition: all .5s;
	    }
	    nav ul li{
	   	display: block;
	  	margin: 50px 0;
	  	line-height: 30px;
	    }
	    nav ul li a {
	  	font-size: 20px;
	    }
	    a:hover {
	  	background: none;
	  	color: #05A7A7;
	    }
	    #check:checked ~ ul {
	  	left: 0;
	    }
      }
    </style>
  </body>
</html>
